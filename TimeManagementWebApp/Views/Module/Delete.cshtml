@model TimeManagementClassLibrary.Module

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-6 txt-secondary mb-4">Are you sure you want to delete this?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Module Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            Module Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Number of Credits
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCredits)
        </dd>
        <dt class = "col-sm-2">
            Class Hours per Week
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassHoursPerWeek)
        </dd>
        <dt class = "col-sm-2">
            Self-Study Hours per Week
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SelfStudyHoursPerWeek)
        </dd>
        <dt class="col-sm-2">
            Study Days
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DaysOfWeek)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ModuleId" />
        <input type="submit" value="Delete" class="btn button-secondary button-grow mb-4 crud-button" />
    </form>
    <div>
        <input class="btn button-primary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Module")'" />
    </div>
</div>
