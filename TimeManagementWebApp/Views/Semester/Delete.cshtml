@model TimeManagementClassLibrary.Semester

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-6 txt-secondary mb-4">Are you sure you want to delete this?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Semester Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SemesterName)
        </dd>
        <dt class = "col-sm-2">
            Weeks
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumWeeks)
        </dd>
        <dt class = "col-sm-2">
            Start Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            End Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SemesterId" />
        <input type="submit" value="Delete" class="btn button-secondary button-grow mb-4 crud-button" />
    </form>
    <div>
        <input class="btn button-primary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Semester")'" />
    </div>
</div>
